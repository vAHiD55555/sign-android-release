{
  "name": "sign-android-release",
  "version": "2.0.4",
  "private": true,
  "description": "GitHub action used to sign Android release packages",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --minify --platform=node --outfile=index.js",
    "test": "jest",
    "deploy": "esbuild src/main.ts --bundle --minify --platform=node --outfile=index.js && ./update_release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PuerNya/sign-android-release.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "PuerNya",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.55",
    "esbuild": "^0.19.11",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^3.9.10"
  }
}
